@model WebApplication5.ViewModels.CreateEmployeeViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddNew</title>

    <script>
        function ResetForm() {
            document.getElementById('TxtFName').value = "";
            document.getElementById('TxtLName').value = "";
            document.getElementById('TxtSalary').value = "";
            //document.getElementById('TxtFName').value = "set";
        }
    </script>
    <script src="~/Scripts/Validations.js"></script>
</head>
<body>
    <div> 
        <form action="/Employee/SaveEmployee" method="post">
            First Name:<input type="text" id="TxtFName" name="FirstName" value="@Model.FirstName" /><br />
            @Html.ValidationMessage("FirstName")<br />
            Last Name:<input type="text" id="TxtLName" name="LastName" value="@Model.LastName" /><br />
            @Html.ValidationMessage("LastName")<br />
            Salary:<input type="text" id="TxtSalary" name="Salary" value="@Model.Salary" /><br />
            @Html.ValidationMessage("Salary")<br />
            <input type="submit" name="BtnSubmit" value="Save Employee" onclick="return IsValid();" />
            <input type="button" name="BtnReset" value="Reset" onclick="ResetForm();"  />
            <input type="submit" name="BtnSubmit" value="Cancel" />
        </form>
    </div>
</body>
</html>
